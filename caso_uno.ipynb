    "def binary_gap(n):\n",
    "    if n.isdecimal() and int(n)>0:\n",
    "        elementos = bin(int(n))[2:].strip('0').split('1')\n",
    "        return len(max(elementos))\n",
    "    else:\n",
    "        return \"el valor ingresado no es valido\"\n",
    "\n",
    "elemento = '1041'\n",
    "print(binary_gap(elemento))"
